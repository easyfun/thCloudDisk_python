/***列表样式***/
QListWidget#ViewCloudDiskListWidget{
	alternate-background-color:yellow;
	show-decoration-selected:1;
	background-color:white;
	border-style:none;
	padding:3px;
}

QListWidget#ViewCloudDiskListWidget::item:alternate{
	background:#EEEEEE;
}

